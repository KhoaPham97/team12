                                                    <tr>
                                                        <td> <h1 style="font-size:18px; color:black;text-align:left"><i class="fa fa-user" aria-hidden="true"></i> Email</h1></td>
                                                        <td> <h1 style="font-size:18px; color:black;text-align:left"> @User.Identity.GetUserName()</h1></td>

                                                    </tr>
                                                    <tr>
